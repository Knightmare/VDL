 <h1> <%= @product.name %> </h1>

<%= image_tag @product.photo.url(:medium) %>

<p>
  <b>Price:</b>
  $<%= @product.price %>
</p>

<p>
  <b>Details:</b>
  <%= @product.content %>
</p>

<p id="notice">
<%= notice %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<%= button_to "Buy Now", new_checkout_path, :method => :get, :id => @product %>
