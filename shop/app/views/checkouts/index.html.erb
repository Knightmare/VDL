

<h1>Listing checkouts</h1>

<table>
  <tr>
	<th>Purchase</th>
    <th>Price</th>
    <th>First name</th>
    <th>Last name</th>
	<th></th>
	<th></th>
  </tr>

<% @checkouts[(0..8)].each do |checkout| %>
  <tr>
	<td><%= link_to checkout.name, checkout %></td>
	<td><%= checkout.price %></td>
    <td><%= checkout.first_name %></td>
    <td><%= checkout.last_name %></td>
    <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
    <td><%= button_to 'Destroy', checkout, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


